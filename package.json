{
  "name": "radiation-manager",
  "version": "1.0.2",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron_builder"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.woobin.radSafety",
    "productName": "종합인사관리",
    "files": [
      "dist/**/*",
      "python_dist/**/*",
      "src/**/*",
      "views/**/*",
      "output/**/*",
      "data/**/*",
      "templates/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "python_dist",
        "to": "python_dist",
        "filter": ["*.exe"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    }
  }
}
